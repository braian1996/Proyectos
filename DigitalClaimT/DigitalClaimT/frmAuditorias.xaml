<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DigitalClaimT.frmAuditorias">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout BackgroundColor="#343a40" Padding="30,30,30,30">
                <Label Text="Auditorias" Font="Bold" Margin="8" FontSize="30" HorizontalOptions="Center" TextColor="White"/>
            </StackLayout>
            <Label Text="FECHA DE RESOLUCIÓN" FontSize="18"></Label>
            <Entry Margin="0, 20, 0, 5" Placeholder="Fecha" ></Entry>
            <Label Text="OBSERVACIÓN" FontSize="18"></Label>
            <Entry Margin="0, 20, 0, 5" Placeholder="Detalle de Resolución" ></Entry>
            <Image x:Name="miFoto"></Image>

            <StackLayout VerticalOptions="EndAndExpand">
            <Button Margin="22" x:Name="btnTomarFoto" Text="Tomar Foto"  BorderColor="#1F2532" TextColor="White" BorderWidth="1" BackgroundColor="#3FBCEF" StyleClass="Info"  Font="16" FontAttributes="Bold" BorderRadius="9" VerticalOptions="EndAndExpand"></Button>
            <Button Margin="22" Text="Enviar"  BorderColor="#1F2532" TextColor="White" BorderWidth="1" BackgroundColor="#3FBCEF" StyleClass="Info"  Font="16" FontAttributes="Bold" BorderRadius="9" VerticalOptions="EndAndExpand"></Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>